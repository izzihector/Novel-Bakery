<odoo>
	<data>

		<record id='view_sale_order' model='ir.ui.view'>
			<field name='name'>sale.order.inherit</field>
			<field name='model'>sale.order</field>
			<field name='inherit_id' ref='sale.view_order_form' />
			<field name='arch' type='xml'>
			<!--	<xpath expr="//field[@name='payment_term_id']" position='after'>
						<field name="allow_sale_min_price" string='Allow Sale With Min Price'
							groups="sale_restrictions.allow_sale_group" />
				</xpath>-->
				<xpath expr="//group[@name='sale_shipping']" position='after'>
					<group string="Approvals" name="sale_approvals">
						<field name="credit_limit_status" string='Credit Limit Approval'
							groups="sale_restrictions.credit_allow_group_1,sale_restrictions.credit_allow_group_2,sale_restrictions.credit_allow_group_3" />
						<field name="day_limit_status" string='Day Limit Approval'
							groups="sale_restrictions.day_allow_group_1,sale_restrictions.day_allow_group_2,sale_restrictions.day_allow_group_3" />
					</group>
				</xpath>
			</field>
		</record>

		<record id='view_partner' model='ir.ui.view'>
			<field name='name'>partner.inherit</field>
			<field name='model'>res.partner</field>
			<field name='inherit_id' ref='base.view_partner_form' />
			<field name='arch' type='xml'>
				<xpath
					expr="//page[@name='sales_purchases']/group/group/field[@name='customer']"
					position='after'>
					<field name="credit_limit" />
				</xpath>
			</field>
		</record>

		<record id='view_approval' model='ir.ui.view'>
			<field name="name">credit.limit.view</field>
			<field name="model">approval.lines</field>
			<field name="arch" type="xml">
				<form string="Credit and Days Limit">
					<sheet>
						<group>
							<group string="Days Limit">
								<field name="day_range" nolabel="1">
									<tree editable="bottom" class="new_class">
										<field name="days" />
										<field name="group" />
									</tree>
								</field>
							</group>
							<group string="Credit Percentage Limit">
								<field name="credit_range" nolabel="1">
									<tree editable="bottom" class="new1_class">
										<field name="amount_percent" />
										<field name="group" />
									</tree>
								</field>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="approval_tree" model="ir.ui.view">
			<field name="name">Days.Approval.Tree</field>
			<field name="model">approval.lines</field>
			<field name="arch" type="xml">
				<tree string="Days limit for approval">
					<field name="day_range" />
					<field name="credit_range" />
				</tree>
			</field>
		</record>

		<record id="action_sale_approve" model="ir.actions.act_window">
			<field name="name">Days Limit</field>
			<field name="res_model">approval.lines</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="view_approval"></field>
			<field name="view_id" ref="approval_tree"></field>
		</record>

		<menuitem id="action_new_view" parent="account.menu_finance_configuration"
			name="Sale Approvals" sequence="1" groups="sale_restrictions.allow_sale_group" action="action_sale_approve" />
	</data>
</odoo>

