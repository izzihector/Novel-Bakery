<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-extend="TableWidget">
        <t t-jquery=">t" t-operation="replace">
            <t t-if='!widget.selected '>
                <div class='table' t-att-style='widget.table_style_str()'>
                    <span
                        t-if="widget.table.shape"
                        t-att-class='"table-cover " + (widget.fill >= 1 ? "full" : "")'
                        t-att-style='"height: " + Math.ceil(widget.fill * 100) + "%;"'
                        ></span>
                   <!-- <t t-if='widget.pos.get_count_need_print(widget.table).active_print !== 0'>
                        <span class='active_print' title="Missed Request to Kitchen/Chef or Printers"><t t-esc='widget.pos.get_count_need_print(widget.table).active_print'/></span>
                    </t>-->
                    <t t-if='widget.pos.get_count_need_print(widget.table).unactive_print !== 0'>
                        <span class='unactive_print' title="Total lines succeed delivery"><t t-esc='widget.pos.get_count_need_print(widget.table).unactive_print'/></span>
                    </t>
                    <t t-if='widget.get_waiting_delivery()'>
                        <span class="order-waiting-delivery" title="Waiting you delivery products to customers"><t t-esc='widget.get_waiting_delivery()'/></span>
                    </t>
                    <t t-if='widget.missed_request_kitchen()'>
                        <span class="missed_request_kitchen" title="Missed Request to Kitchen/Chef"><t t-esc='widget.missed_request_kitchen()'/></span>
                    </t>
                    <t t-if="widget.get_total_amount_by_table()">
                        <span class="table_amount_total">
                            <t t-esc='widget.format_currency(widget.get_total_amount_by_table())'/>
                        </span>
                    </t>
                    <span class='table-name'>
                        <t t-esc='widget.table.name' />
                    </span>
                    <span class="table-seats"><t t-esc="widget.table.seats" /></span>
                </div>
            </t>
            <t t-if='widget.selected'>
                <div class='table selected' t-att-style='widget.table_style_str()'>
                    <span class='table-name'>
                        <t t-esc='widget.table.name' />
                    </span>
                    <span class="table-seats"><t t-esc="widget.table.seats" /></span>
                    <t t-if="widget.table.shape === 'round'">
                        <span class='table-handle top'></span>
                        <span class='table-handle bottom'></span>
                        <span class='table-handle left'></span>
                        <span class='table-handle right'></span>
                    </t>
                    <t t-if="widget.table.shape === 'square'">
                        <span class='table-handle top right'></span>
                        <span class='table-handle top left'></span>
                        <span class='table-handle bottom right'></span>
                        <span class='table-handle bottom left'></span>
                    </t>
                </div>
            </t>
        </t>
    </t>

    <t t-extend="Orderline">
        <t t-jquery="div[class*='info']:first" t-operation="after">
            <t t-if="widget.pos.config.send_order_to_kitchen and line.state">
                <div class="info">
                    <div class="o_statusbar_status o_field_widget o_readonly_modifier" name="state">
                        <span type="line-state">
                            <i class="fa fa-bullhorn"/>  Status: <t t-esc="line.state"/>
                        </span>
                    </div>
                </div>
                <div class="info" style="height: auto;
                        margin-top: 10px;
                        margin-bottom: 10px;
                        margin-left: 10px;">
                    <t t-if="line.state !== 'Done'">
                        <t t-if="line.state == 'Ready'">
                            <span class='btn btn-success done' title="Set Done">
                                <i class="fa fa-certificate"/>
                            </span>
                        </t>
                        <t t-if="line.state !== 'Priority'">
                            <span class='btn btn-danger priority' title="Set Priority">
                                <i class="fa fa-certificate"/>
                            </span>
                        </t>
                        <t t-if="line.state == 'Priority'">
                            <span class='btn btn-default exit_priority' title="Exit High Priority">
                                <i class="fa fa-certificate"/>
                            </span>
                        </t>
                        <t t-if="line.state != 'Draft'">
                            <span class='btn btn-default pending' title="Set Pending">
                                <i class="fa fa-check"/>
                            </span>
                        </t>
                    </t>
                </div>
            </t>
        </t>
    </t>

    <t t-name="button_delivery_to_kitchen">
        <div class="left_button">
            <div class="button-icon">
                <img src="/pos_retail/static/src/icons/chef.png" class="pos_logo"/>
            </div>
            <div class="button-name">
                Send Kitchen Chef
            </div>
        </div>
    </t>

    <t t-name="button_set_lines_to_done">
        <div class="left_button">
            <div class="button-icon">
                <i class="fa fa-check"/>
            </div>
            <div class="button-name">
                Set Done All
            </div>
        </div>
    </t>


    <t t-name="reboot_iot_box">
        <div class="left_button" style="backround: red">
            <div class="button-icon">
                <i class="fa fa-refresh"/>
            </div>
            <div class="button-name">
                Reboot IoT Boxes
            </div>
        </div>
    </t>

    <t t-name="OrderChangeReceipt_html">
        <div class="pos-sale-ticket">
            <div class="pos-center-align"><t t-esc="moment().format('L LT')"/>
                <div size='normal' ><t t-esc="changes.name" /></div>
                <t t-if="changes.floor || changes.table">
                    <div><span><t t-esc="changes.floor" /></span> / <span bold='on' size='double'><t t-esc="changes.table"/></span></div>
                </t>
                <t t-if="widget.pos.get_order() and widget.pos.get_order().guest">
                    <div><span>Guest: <t t-esc="widget.pos.get_order().guest" /></span> / <span bold='on' size='double'><t t-esc="widget.pos.get_order().guest_number"/></span></div>
                </t>
                <t t-if="changes.cancelled.length > 0">
                    <div color='red'>
                        <div bold='on' size='double'>CANCELLED <span bold='off' size='double-height'><t t-esc='changes.time.hours' />:<t t-esc='changes.time.minutes' /></span> </div>
                        <table>
                            <tr margin-top="20%;padding-top:4%">
                                <th style="border-bottom: solid 1px black;width: 15%">Quantity</th>
                                <th style="text-align:center;border-bottom: solid 1px black; width: 50%">Product</th>
                            </tr>
                            <t t-foreach="changes.cancelled" t-as="change">
                                <tr style="border-bottom: solid 1px black;">
                                    <td align="center">
                                        <t t-esc="change.qty" />
                                    </td>
                                    <td align="left">
                                        <span style="font-weight:900" t-esc="change.name_wrapped[0]" />
                                        <t t-if="change.note">
                                            <br/>
                                            Note: <t t-esc="change.note" />
                                        </t>
                                        <br/>
                                        <t t-if="change.sales_extra">
                                            <t t-foreach="change.sales_extra" t-as="sale_extra">
                                                <ul class="bus-info">
                                                    <li class="info">
                                                        + <value><t t-esc="sale_extra.qty" /></value><t t-esc="sale_extra.product_name_wrapped" />
                                                    </li>
                                                </ul>
                                            </t>
                                        </t>
                                        <t t-if="change.tags">
                                            <t t-foreach="change.tags" t-as="tag">
                                                <ul class="bus-info">
                                                    <li class="info">
                                                        <t t-esc="tag.name"/>
                                                    </li>
                                                </ul>
                                            </t>
                                        </t>
                                        <t t-if="change.variants">
                                            <t t-foreach="change.variants" t-as="variant">
                                                <ul class="bus-info">
                                                    <li class="info">
                                                        + <value><t t-esc="variant.quantity" /> --- </value><t t-esc="variant.value_id[1]" />
                                                    </li>
                                                </ul>
                                            </t>
                                        </t>
                                    </td>
                                </tr>
                            </t>
                        </table>
                    </div>
                </t>
                <t t-if="changes.new.length > 0">
                    <div bold='on' size='double'>NEW <span bold='off' size='double-height'><t t-esc='changes.time.hours' />:<t t-esc='changes.time.minutes' /></span> </div>
                        <table>
                            <tr margin-top="20%;padding-top:4%">
                                <th style="border-bottom: solid 1px black;width: 15%">Quantity</th>
                                <th style="text-align:center;border-bottom: solid 1px black; width: 50%">Product</th>
                            </tr>
                            <t t-foreach="changes.new" t-as="change">
                                <tr style="border-bottom: solid 1px black;">
                                    <td align="center">
                                        <t t-esc="change.qty" />
                                    </td>
                                    <td align="left">
                                        <span style="font-weight:900" t-esc="change.name_wrapped[0]" />
                                        <span t-if="change.note">
                                            <br/>
                                            Note: <t t-esc="change.note" />
                                        </span>
                                        <br/>
                                        <t t-if="change.sales_extra">
                                            <t t-foreach="change.sales_extra" t-as="sale_extra">
                                                <ul class="bus-info">
                                                    <li class="info">
                                                        + <value><t t-esc="sale_extra.qty" /></value><t t-esc="sale_extra.product_name_wrapped" />
                                                    </li>
                                                </ul>
                                            </t>
                                        </t>
                                        <t t-if="change.tags">
                                            <t t-foreach="change.tags" t-as="tag">
                                                <ul class="bus-info">
                                                    <li class="info">
                                                        <t t-esc="tag.name"/>
                                                    </li>
                                                </ul>
                                            </t>
                                        </t>
                                        <t t-if="change.variants">
                                            <t t-foreach="change.variants" t-as="variant">
                                                <ul class="bus-info">
                                                    <li class="info">
                                                        + <value><t t-esc="variant.quantity" /></value> --- <t t-esc="variant.value_id[1]" />
                                                    </li>
                                                </ul>
                                            </t>
                                        </t>
                                    </td>
                                </tr>
                            </t>
                        </table>
                    </t>
            </div>
        </div>
    </t>

    <t t-extend="OrderChangeReceipt">
        <t t-jquery="receipt" t-operation="replace">
            <receipt
                align='center'
                width='40'
                size='double-height'
                line-ratio='0.4'
                value-decimals='3'
                value-thousands-separator=''
                value-autoint='on'
            >
                <br />
                <br />
                <br />
                <br />
                <div size='double-height' >
                    <!-- double-height -->
                    <span bold='on' style="font-size:25px;" line-ratio='0.4'>
                        <t t-esc="changes.name" />
                    </span>
                </div>
                <br />
                <t t-if="changes.floor || changes.table">
                    
                    <div size='normal' >
                        <span bold='on'><t t-esc="changes.floor" /></span>
                    </div> 
                    <div size='normal' >
                        <span bold='on'><t t-esc="changes.table"/></span>
                    </div>
                </t>
                <div size='normal' >
                    <span bold='on'>
                        Printed at: <t t-esc='changes.datetime' />
                    </span>
                </div>
                <div size='normal' >________________________________________</div>
                <div size='normal' >
                    <line>
                        <left><span bold='on'>Type:</span></left>
                        <right><span bold='on' style="text-align: left"><t t-esc="changes.table"/></span></right>
                    </line>
                    <line>
                        <left><span bold='on'>Persons:</span></left>
                        <right><span bold='on' style="text-align: left"><t t-esc="changes.customer_count"/></span></right>
                    </line>
                    <line>
                        <left><span bold='on'>Cashier:</span></left>
                        <right><span bold='on' style="text-align: left"><t t-esc="widget.pos.cashier ? widget.pos.cashier.name : widget.pos.user.name"/></span></right>
                    </line>
                    <line>
                        <left><span bold='on'>Date:</span></left>
                        <right><span bold='on' style="text-align: left"><t t-esc="changes.date_only"/></span></right>
                    </line>
                    <line>
                        <left><span bold='on'>Time:</span></left>
                        <right><span bold='on' style="text-align: left"><t t-esc="changes.time_only"/></span></right>
                    </line>
                </div>
                
                <t t-if="changes.new.length > 0">
                    <div size='normal' >________________________________________</div>
                    <div size='normal' ><span bold='on'>NEW</span></div>
                    <div size='normal' >________________________________________</div>
                    <t t-foreach="changes.new" t-as="change">
                        <line>
                            <left><span bold='on' line-ratio='0.3'><t t-esc="change.qty" /></span></left>
                            <right>
                                <span bold='on' style="text-align:left" line-ratio='0.3'><t t-esc="change.english_name" /></span>
                            </right>
                        </line>
                        <!-- <t t-call="NameWrapped"/> -->

                        <t t-if="change.note">
                            <div style="text-align: left">
                                <span bold='on' indent='1' width='30' line-ratio='0.3'>
                                    (<t t-esc="change.note" />)
                                </span>
                            </div>
                        </t>

                        <t t-if="change.custom_notes">
                            <t t-foreach="change.custom_notes" t-as="cnotes">
                                <div style="text-align: left">
                                    <span bold='on' indent='1' width='30' line-ratio='0.3'>
                                        (<t t-esc="cnotes.name" />)
                                    </span>
                                </div>
                            </t>
                        </t>

                        <t t-if="change.uom">
                            <div style="text-align: left">
                                <span font='c' bold='off' line-ratio='0.3' indent='1' width='30'></span>
                            </div>
                        </t>
                        <t t-if="change.tags">
                            <t t-foreach="change.tags" t-as="tag">
                                <div style="text-align: left">
                                    <span font='c' line-ratio='0.3' indent='1'>
                                         <t t-esc="tag.name"/>
                                    </span>
                                </div>
                            </t>
                        </t>
                        <t t-if="change.variants">
                            <t t-foreach="change.variants" t-as="variant">
                                <div style="text-align: left">
                                    <span font='c' line-ratio='0.4' indent='1'>
                                        --- With <t t-esc="variant.quantity" /> of <t t-esc="variant.attribute_id[1]" /> and  <t t-esc="variant.value_id[1]" />
                                    </span>
                                </div>
                            </t>
                        </t>
                        <t t-if="change.combo_items">
                            <t t-foreach="change.combo_items" t-as="combo">
                                <div style="text-align: left">
                                    <span font='c' line-ratio='0.4' indent='1'>
                                        --- <t t-esc="combo.product_id[1]" /> / <t t-esc="combo.uom_id[0]" /> with qty: <t t-esc="combo.quantity" />
                                    </span>
                                </div>
                            </t>
                        </t>
                    </t>
                    <br />
                    <br />
                </t>
                <t t-if="changes.cancelled.length > 0">
                    <div color='red'>
                        <div size='normal' >________________________________________</div>
                        <div size='normal' ><span bold='on'>CANCELLED</span></div>
                        <div size='normal' >________________________________________</div>
                        <t t-foreach="changes.cancelled" t-as="change">
                            <line>
                                <left><span bold='on' line-ratio='0.3'><t t-esc="change.qty" /></span></left>
                                <right><span bold='on' style="text-align:left" line-ratio='0.3'><t t-esc="change.english_name" /></span></right>
                            </line>
                            <!-- <t t-call="NameWrapped"/> -->

                            <t t-if="change.note">
                                <div style="text-align: left">
                                    <span font='b' bold='off' line-ratio='0.4' indent='1' width='30'>
                                        (<t t-esc="change.note" />)
                                    </span>
                                </div>
                            </t>

                            <t t-if="change.custom_notes">
                                <t t-foreach="change.custom_notes" t-as="cnotes">
                                    <div style="text-align: left">
                                        <span bold='on' indent='1' width='30' line-ratio='0.3'>
                                            (<t t-esc="cnotes.name" />)
                                        </span>
                                    </div>
                                </t>
                            </t>

                            <t t-if="change.uom">
                                <div style="text-align: left">
                                    <span font='c' bold='off' line-ratio='0.4' indent='1' width='30'>--- <t t-esc="change.uom['name']" /></span>
                                </div>
                            </t>
                            <t t-if="change.tags">
                                <t t-foreach="change.tags" t-as="tag">
                                    <div style="text-align: left">
                                        <span font='c' line-ratio='0.4' indent='1'>
                                            --- <t t-esc="tag.name"/>
                                        </span>
                                    </div>
                                </t>
                            </t>
                            <t t-if="change.variants">
                                <t t-foreach="change.variants" t-as="variant">
                                    <div style="text-align: left">
                                        <span font='c' line-ratio='0.4' indent='1'>
                                            --- With <t t-esc="variant.quantity" /> of <t t-esc="variant.value_id[1]" />
                                        </span>
                                    </div>
                                </t>
                            </t>
                            <t t-if="change.combo_items">
                                <t t-foreach="change.combo_items" t-as="combo">
                                    <div style="text-align: left">
                                        <span font='c' line-ratio='0.4' indent='1'>
                                            --- <t t-esc="combo.product_id[1]" /> / <t t-esc="combo.uom_id[0]" /> with qty: <t t-esc="combo.quantity" />
                                        </span>
                                    </div>
                                </t>
                            </t>
                            <div>--------------------------------</div>
                        </t>
                        <br />
                        <br />
                    </div>
                </t>
            </receipt>
        </t>
    </t>

    <t t-name="button_kitchen_receipt_screen">
        <div class="left_button">
            <div class="button-icon">
                <i class="fa fa-list" style="color: green"/>
            </div>
            <div class="button-name">
                Kitchen/Bar Bill
            </div>
        </div>
    </t>

    <t t-name="kitchen_receipt_screen">
        <div class='receipt-screen screen'>
            <div class='full_width screen-content'>
                <div class='top-content'>
                    <span class='button back'>
                        <i class='fa fa-angle-double-left'></i>
                        Back
                    </span>
                </div>
                <div class="centered-content touch-scrollable">
                    <div class="button print-kitchen-receipt">
                        <i class='fa fa-print'></i> Print Web
                    </div>
                    <div class="pos-receipt-container">
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="kitchen_receipt_html">
        <div class="pos-sale-ticket test-class">
            <table class='receipt-orderlines'>
                <!-- Changes By Mushahid Ali Start -->

                <div class="pos-center-align" style="font-size:16px;font-family:Calibri;">
                    <strong>
                        <t t-esc="widget.pos.config.name ? widget.pos.config.name : widget.pos.config.name"/>
                    </strong>
                </div>
                <div class="pos-center-align" style="font-size:16px;font-family:Calibri;">
                    <strong>
                        <t t-esc='floor' />:<t t-esc='table' />
                    </strong>
                </div>
                <div class="pos-center-align" style="font-size:16px;font-family:Calibri;">
                    <strong>
                        <t t-esc='name' />
                    </strong>
                </div>
                <div class="pos-center-align" style="font-size:14px;font-family:Calibri;">
                    <strong>
                        Printed at: <t t-esc='datetime' />
                    </strong>
                </div>
                <div style="text-align:center;">________________________________________</div>
                <table style="margin-left: 10px;">
                    <tr>
                        <td style="width:30% !important;font-size:14px;text-align:left;font-family:Calibri;">
                            <strong>Type:</strong> 
                        </td>
                        <td style="width:70% !important;font-size:14px;text-align:left;font-family:Calibri;">
                            <strong><t t-esc="table"/></strong> 
                        </td>
                    </tr>
                    <tr>
                        <td style="width:30% !important;font-size:14px;text-align:left;font-family:Calibri;">
                            <strong>Persons:</strong> 
                        </td>
                        <td style="width:70% !important;font-size:14px;text-align:left;font-family:Calibri;">
                            <strong><t t-esc="guest_numbers ? guest_numbers : 1"/></strong> 
                        </td>
                    </tr>
                    <tr>
                        <td style="width:30% !important;font-size:14px;text-align:left;font-family:Calibri;">
                            <strong>Cashier:</strong> 
                        </td>
                        <td style="width:70% !important;font-size:14px;text-align:left;font-family:Calibri;">
                            <strong><t t-esc="widget.pos.cashier ? widget.pos.cashier.name : widget.pos.user.name"/></strong> 
                        </td>
                    </tr>
                    <tr>
                        <td style="width:30% !important;font-size:14px;text-align:left;font-family:Calibri;">
                            <strong>Date:</strong> 
                        </td>
                        <td style="width:70% !important;font-size:14px;text-align:left;font-family:Calibri;">
                            <strong><t t-esc="date_only"/></strong> 
                        </td>
                    </tr>
                    <tr>
                        <td style="width:30% !important;font-size:14px;text-align:left;font-family:Calibri;">
                            <strong>Time:</strong> 
                        </td>
                        <td style="width:70% !important;font-size:14px;text-align:left;font-family:Calibri;">
                            <strong><t t-esc="time_only"/></strong> 
                        </td>
                    </tr>
                </table>
                <div style="text-align:center;">________________________________________</div>
                <t t-if="new_items.length">
                    <div class="pos-center-align" style="font-size:14px;font-family:Calibri;font-weight: bold;">NEW</div>
                </t>
                <t t-if="cancelled_items.length">
                    <div class="pos-center-align" style="font-size:14px;font-family:Calibri;font-weight: bold;">CANCELLED</div>
                </t>
                <div style="text-align:center;">________________________________________</div>
                
                <tr t-foreach="new_items" t-as="change">
                    <div style="width:90% !important;margin-left:10px;">
                        <div style="float:left;width:15% !important; font-size:14px;text-align:left;font-family:Calibri;font-weight: bold;">
                            <t t-esc="change['qty']"/>
                        </div>
                        <div style="float:left;width:85% !important; font-size:14px;text-align:left;font-family:Calibri;font-weight: bold;">
                            <t t-esc="change['name']"/>
                        </div>
                        <t t-if="change['note']">
                            <div style="margin-left:20% !important;float:left;width:80% !important; font-size:14px;text-align:left;font-family:Calibri;font-weight: bold;">
                            (<t t-esc="change['note']"/>)
                            </div>
                        </t>
                        <t t-if="change.custom_notes">
                            <t t-foreach="change.custom_notes" t-as="cnotes">
                                <div style="margin-left:20% !important;float:left;width:80% !important; font-size:14px;text-align:left;font-family:Calibri;font-weight: bold;">
                                (<t t-esc="cnotes.name"/>)
                                </div>
                            </t>
                        </t>

                        <t t-if="change.uom">
                            <div style="margin-left:20% !important;float:left;width:80% !important; font-size:14px;text-align:left;font-family:Calibri;font-weight: bold;">
                                <!-- <span font='c' bold='off' line-ratio='0.4' indent='1' width='30'><t t-esc="change.uom['name']" /></span> -->
                            </div>
                        </t>

