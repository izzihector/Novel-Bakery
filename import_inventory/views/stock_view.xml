<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
            <record id="inventory_view_inherit_sit_1" model="ir.ui.view">
        <field name="name">stock.inventory.form.view.sit</field>
        <field name="model">stock.inventory</field>
                <field name="inherit_id" ref="stock.view_inventory_form"/>
                <field name="arch" type="xml">
                    <xpath expr="//button[@name='action_validate']" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </xpath>
                    <xpath expr="//button[1]" position="after">
                        <button name="action_validate" states="confirm" string="Validate Inventory" type="object" class="oe_highlight" groups="material_internal_requisition.group_cancel_je"/>
                    </xpath>
                </field>
            </record>

     <record id="gen_inv_wizard_view" model="ir.ui.view">
        <field name="name">wizard for import csv file </field>
        <field name="model">gen.inv</field>
        <field name="arch" type="xml">
            <form string="Generate Inv">
                <group>
                    <group>
                        <field name="inv_name" />
                    </group>
                    <group>
                        <field name="location_id"  />
                    </group>
                    <group>
                        <field name="import_option" widget='radio' />
                    </group>
               <group>
                    <field name="import_prod_option" widget='radio'/>
                </group>
                </group>
                <span style="font-size:20px; color:red;" attrs ="{'invisible': [('import_prod_option' ,'!=', 'name')]}">Make sure that you have unique product name for all products Otherwise import doesn't work well</span>
                <group>
                    <field name="file"  filename="filename"  />
                </group>
                <footer>
                    <button name="import_csv" string="Import" type="object"/>
                </footer>
            </form>
        </field>
    </record>

        <record id="gen_inv_wizard" model="ir.actions.act_window">
            <field name="name">Import Inventory</field>
            <field name="res_model">gen.inv</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

   <menuitem action="gen_inv_wizard"
    id="gen_inv_wizard_import"
     parent="stock.menu_stock_inventory_control" groups="stock.group_stock_user" sequence="31"/>

  </data>
</openerp>
 
