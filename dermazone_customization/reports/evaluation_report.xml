		                    <strong>توقيع المحاسب</strong>
		                    </td>

	                    </tr>
                    </tbody>
	            </table>

                    </div>
                    </t>
                    </t>
                </t>
            </t>
        </template>

    <template id="packing_header_diff">

	<div class="header">
            <div class="row">
                <div class="col-3 mb4">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 65px;" alt="Logo"/>
                </div>
                <div class="col-9 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
            <div t-if="company.logo or company.report_header" class="row zero_min_height">
                <div class="col-12">
                    <div style="border-bottom: 1px solid black;"/>
                </div>
            </div>
                <div class="col-6" style="position:relative; left:30px" name="company_address">
                    <div style="font-weight:bold" t-field="company.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"/>
                </div>
            </div>
        </div>
	</template>

</odoo>