<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	  <report
                id="action_print_evaluation_print"
                string="Evaluation Form"
                model="sale.order"
                report_type="qweb-pdf"
                name="dermazone_customization.report_custom_evaluation_form"
                file="dermazone_customization.report_custom_evaluation_form"
        />
     <template id="general_header_diff">
		<t t-if="o and 'company_id' in o">
			<t t-set="company" t-value="o.company_id" />
		</t>
		<t t-if="not o or not 'company_id' in o">
			<t t-set="company" t-value="res_company" />
		</t>
    		<t t-call="dermazone_customization.packing_header_diff" />
		<t t-raw="0" />
	</template>

     <template id="report_custom_evaluation_form">
            <t t-call="web.html_container">
            <t t-call="web.basic_layout">
                <t t-as="o" t-foreach="docs">
                    <t t-call="dermazone_customization.general_header_diff">
                <div class="page">
                    <table class="table table-bordered">
                        <tr>
                            <td align="center" style="font-size:11px">
                                <strong>No.&#160;<span t-field="o.name" /></strong>
                            </td>
                            <td align="center" style="font-size:11px">
                                <strong><span t-field="o.name" />&#160;:رقم الطلب</strong>
                            </td>
                        </tr>
                    </table>
                     <table class="table table-bordered">
                        <tr>
                            <td align="center" style="font-size:11px">
                                <strong>Date :&#160;<span t-field="o.validity_date" /></strong>
                            </td>
                            <td align="center" style="font-size:11px">
                                <strong><span t-field="o.validity_date" />&#160;:التاريخ </strong>
                            </td>
                        </tr>
                    </table>
                    <table class="table table-bordered">
                        <tr>
                            <td align="center" style="font-size:11px">
                                <strong>Customer Name :&#160;<span t-field="o.partner_id.english_name" /></strong>
                            </td>
                            <td align="center" style="font-size:11px">
                                <strong><span t-field="o.partner_id.name" />&#160;:اسم العميل </strong>
                            </td>
                        </tr>
                    </table>
                    <table class="table table-bordered">
                        <tr>
                            <td align="center" style="font-size:11px">
