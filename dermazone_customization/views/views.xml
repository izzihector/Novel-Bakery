<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_partner_report_inherit" model="ir.ui.view">
            <field name="name">res.partner.inherit.view.one</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="english_name" placeholder="English Name" />
                </xpath>
            </field>
        </record>

        <record id="sale_line_order_inherit" model="ir.ui.view">
            <field name="name">sale.line.view.sit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
                    <field name="bonus_qty" string="Bonus Qty"/>
                    <field name="lot_number" options="{&quot;no_create&quot;: True}" />
                    <field name="expiry_date" />
                </xpath>
            </field>
        </record>

        <record id="invoice_line_order_inherit" model="ir.ui.view">
            <field name="name">invoice.line.view.sit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
                    <field name="lot_number" options="{&quot;no_create&quot;: True}" />
                    <field name="expire_date" />
                    <field name="bonus_qty" string="Bonus Qty"/>
                </xpath>
            </field>
        </record>

        <record id="stock_view_line_move_inherit" model="ir.ui.view">
            <field name="name">stock.view.inherit.sit</field>
            <field name="model">stock.move.line</field>
            <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_uom_qty']" position="before">
                    <!--<field name="expiry_date" string="Expiry Date" invisible="not context.get('show_lots_m2o')"/>
                    <field name="product_stock" string="Stock" invisible="not context.get('show_lots_m2o')"/>-->
                    <field name="expiry_date_input" string="Expiry Date" invisible="not context.get('show_lots_text')"/>
                    <field name="production_date_input" string="Production Date" invisible="not context.get('show_lots_text')"/>
                </xpath>
            </field>
        </record>

         <record id="production_view_lot_inherit" model="ir.ui.view">
            <field name="name">view.lot.production.lot.inherit</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="product_expiry.view_move_form_expiry"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='use_date']" position="after">
                    <field name="production_date" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>